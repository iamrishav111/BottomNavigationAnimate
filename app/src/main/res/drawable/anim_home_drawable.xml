<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="lollipop">
    <!-- provide a different drawable for each state-->
    <item android:id="@+id/state_on"
        android:drawable="@drawable/ic_home_active"
        android:state_checked="true"/>

    <item android:id="@+id/state_off"
        android:drawable="@drawable/ic_home_inactive"
        android:state_checked="false"
        />

    <!--
        <item android:id="@id/default"
            android:drawable="@drawable/ic_home_inactive"/>
    -->

    <transition
        android:drawable="@drawable/ic_home_active_avd"
        android:fromId="@+id/state_off"
        android:toId="@+id/state_on"
        />

</animated-selector>